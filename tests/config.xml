<?xml version='1.0' encoding='utf-8'?>
<widget id="com.microsoft.azure.mobileservices.test" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Azure Mobile Services Tests</name>
    <description>
        Apache Cordova application to unit test the com.microsoft.azure-mobile-services plugin.
    </description>
    <author>
      Microsoft Corporation
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="windows" spec="^4.0.0" />
</widget>
